<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/dark_gray</item>
        <item name="android:windowBackground">@color/base</item>
        <item name="android:textColorHint">@color/gray</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@color/dark_gray</item>

        <!-- Material Theme -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/dark_gray</item>

        <item name="android:statusBarColor" tools:targetApi="21">@color/dark_gray</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigation_bar</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>


        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_into_left</item>
        <item name="android:activityOpenExitAnimation">@anim/right_out_left</item>
        <!--<item name="android:activityCloseEnterAnimation">@anim/left_into_right</item>-->
        <item name="android:activityCloseExitAnimation">@anim/left_out_right</item>
    </style>
    <style name="AppTheme.NoStatusBar" parent="@style/AppTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="21">true</item>
    </style>
    <style name="Bottom_Tab_Bar_TextView">
        <item name="android:textColor">@color/home_bottom_tab_bar_textview</item>
        <item name="android:textSize">12dp</item>
    </style>
    <declare-styleable name="DraggableFlagView">
        <attr name="hintcolor" format="color"/>
    </declare-styleable>
    <style name="common_text_style_17dp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="common_text_style_19dp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19dp</item>
    </style>

    <!--clearableEditText-->
    <declare-styleable name="ClearableEditText">
        <attr name="hasIcon" format="boolean"/>
        <attr name="iconRes" format="reference"/>
        <attr name="iconMarginLeft" format="dimension"/>
        <attr name="iconMarginRight" format="dimension"/>

        <attr name="clearableEditTextColor" format="color"/>
        <attr name="clearableEditTextHintColor" format="color"/>
        <attr name="editTextContent" format="string"/>
        <attr name="editTextHintContent" format="string"/>
        <attr name="editTextSize" format="dimension"/>
        <attr name="editTextAutoFocus" format="boolean"/>
        <attr name="clearableEditTextBackground" format="reference"/>
        <attr name="isPassword" format="boolean"/>

        <attr name="clearIconRes" format="reference"/>
        <attr name="clearIconMarginLeft" format="dimension"/>
        <attr name="clearIconMarginRight" format="dimension"/>

        <attr name="hasVisibilitySwitch" format="boolean"/>
        <attr name="visibilitySwitchMarginRight" format="dimension"/>
        <attr name="visibilitySwitchWidth" format="dimension"/>
        <attr name="visibilitySwitchHeight" format="dimension"/>
        <attr name="visibilitySwitchBg" format="reference"/>
    </declare-styleable>
    <!--clearableEditText-->

    <style name="loginhome_textview">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:textSize">19dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="loginhome_item_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#D1EE00</item>
        <item name="android:textColorHint">#999999</item>
    </style>

</resources>
