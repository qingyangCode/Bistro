<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:id="@+id/layout_top_bar"
        android:background="@color/white"
        >

    <ImageView
            android:id="@+id/iv_top_bar_left"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:background="@drawable/common_press_bg_selector"
            />
    <ImageView
        android:id="@+id/iv_top_bar_sensor"
        android:layout_width="25dp"
        android:layout_height="54dp"
        android:layout_centerVertical="true"
        android:background="@drawable/common_press_bg_selector"
        android:layout_toRightOf="@id/iv_top_bar_left"
        android:visibility="gone"
        />
    <TextView
            android:id="@+id/tv_top_bar_title"
            style="@style/common_text_style_17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:gravity="center"
            />

    <Button
        android:id="@+id/debug_button_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_top_bar_title"
        android:text="Dbg"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:visibility="gone"
        />

    <ImageView
            android:id="@+id/iv_top_bar_right"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_press_bg_selector"
            />

    <TextView
            style="@style/common_text_style_19dp"
            android:id="@+id/tv_top_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#D1EE00"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"
            />

    <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/top_bg"
            android:visibility="visible"
            />
</RelativeLayout>